@page "/sprachen"
@using System.Net.Http.Json
@inject HttpClient Http

<h3>Sprachenerkennung</h3>

<div class="mb-3">
    <label for="textInput" class="form-label">Text eingeben:</label>
    <textarea id="textInput" class="form-control" @bind="inputText" rows="4"></textarea>
</div>

<button class="btn btn-primary" @onclick="DetectLanguage">Sprache erkennen</button>

@if (!string.IsNullOrEmpty(detectedLanguage))
{
    <div class="mt-3 alert alert-info">
        <strong>Erkannte Sprache:</strong> @detectedLanguage
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="mt-3 alert alert-danger">
        Fehler: @errorMessage
    </div>
}

@code {
    private string inputText = string.Empty;
    private string detectedLanguage = string.Empty;
    private string errorMessage = string.Empty;

    private async Task DetectLanguage()
    {
        errorMessage = "";
        detectedLanguage = "";

        try
        {
            var response = await Http.PostAsJsonAsync("https://libretranslate.com/detect", new { q = inputText });

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<List<DetectionResult>>();
                detectedLanguage = result?.FirstOrDefault()?.language ?? "Unbekannt";
            }
            else
            {
                errorMessage = $"HTTP Fehler: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    public class DetectionResult
    {
        public string language { get; set; }
        public double confidence { get; set; }
    }
}
