@page "/"
@namespace BlazorProjekt.Pages
@using BlazorProjekt.Components
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <title>BlazorProjekt</title>
    <base href="~/" />

    <!-- CSS -->
    <link href="bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="app.css" rel="stylesheet" />
    <link href="WetterStyleSheet.css" rel="stylesheet" />

    <!-- Chart.js (für Wetter-Chart) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <!-- Blazor Server Framework -->
    <script src="_framework/blazor.server.js"></script>

    <!-- Eigene JavaScript-Dateien -->
    <script src="js/ball.js"></script>
    <script src="weather.js"></script> <!-- Pfad anpassen, falls weather.js in Unterordner liegt -->

</body>
</html>
